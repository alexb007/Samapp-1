<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="0dp"
    tools:context="uz.samtuit.sammap.samapp.HotelActivity"
    android:id="@+id/relative">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_weight="2"
            android:weightSum="7"
            android:id="@+id/imageLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:padding="0dp"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/hotelOpenInMap"
                    android:background="@android:color/transparent"
                    android:src="@drawable/map_icon"
                    android:scaleType="centerCrop"
                    android:layout_gravity="right"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:padding="5dp"
                android:background="#33ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/HotelTitle" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#33ffffff"
                android:paddingTop="5dp"
                android:layout_marginTop="100dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/star_black_icon"
                    android:layout_marginRight="5dp"
                    android:id="@+id/star1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star_black_icon"
                    android:layout_marginRight="5dp"
                    android:id="@+id/star2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star_black_icon"
                    android:layout_marginRight="5dp"
                    android:id="@+id/star3" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star_black_icon"
                    android:layout_marginRight="5dp"
                    android:id="@+id/star4" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star_black_icon"
                    android:layout_marginRight="5dp"
                    android:id="@+id/star5" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/saveButton"
                    android:src="@drawable/save_icon"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="50dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:id="@+id/hotelTitleSmall" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/callBtn"
                android:src="@drawable/call_icon"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/link"
                android:layout_marginLeft="10dp"
                android:src="@drawable/link_icon"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_weight="4"
            android:id="@+id/hotelAbout" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Address"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:id="@+id/address" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton8"
                android:layout_marginLeft="10dp"
                android:src="@drawable/address_icon"
                android:scaleType="centerInside"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_weight="2"
            android:id="@+id/hotelAddressTextBox" />

    </LinearLayout>

</RelativeLayout>
